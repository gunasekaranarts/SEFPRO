<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgFood"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="16dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_contact_info"  />

    <TextView
        android:id="@+id/txtFootTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textSize="17dp"
        android:text="Title"
        android:layout_alignTop="@+id/imgFood"
        android:layout_toEndOf="@+id/imgFood" />

    <TextView
        android:id="@+id/txtFoodDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtFootTitle"
        android:textSize="13dp"
        android:layout_below="@+id/txtFootTitle"
        android:text="Desc" />
</RelativeLayout>